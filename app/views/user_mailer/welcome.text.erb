<% if @email_body.is_a?(String) %>
  <%= @email_body %>
  <%= @theme&.email_welcome_closing[@user.locale] %>
<% else %>
  <%= @email_body[:header] %>
  <%= @email_body[:step1] %>
  <%= @email_body[:step2] %>
  <% if @email_body[:is_otp] %>
    <%= I18n.t('user.welcome_email.otp.instructional', href: link_to(I18n.t('user.welcome_email.otp.instruction', locale: @user.locale), @theme.email_instruction_url, target: '_blank'), locale: @user.locale) %>
  <% end %>
<% end %>